<!--Mobile Menu-->
<div class="mobile_nav" id="mobile_nav">
  <div class="mobile_nav_wrp">

    <div class="mobile_nav_inner">

      <div class="mobile_nav_inner_wrapp">

        <ul class="mobilelistnav">
          {%- for link in section.settings.menu.links -%}
            <li>
              {%- if link.links != blank -%}

                <a href="{{ link.url | escape }}" class="h5 m0 caps {% if link.active %} active{% endif %}">{{ link.title | escape }}
                  <span class="childarow">
                    <i class="fa fa-chevron-down"></i>
                  </span>
                </a>

                <ul class="mob_submenu">
                  {%- for childlink in link.links -%}
                    <li>
                      {%- if childlink.links == blank -%}
                        <a href="{{ childlink.url }}" class="h5 m0 caps {% if childlink.active %} active{% endif %}">
                          {{ childlink.title | escape }}

                        </a>
                      {%- else -%}

                        <a href="{{ childlink.url }}" class="menu-list__link {% if childlink.active %} active{% endif %}">
                          {{ childlink.title | escape }}
                        </a>
                        {%- for lm_2 in childlink.links -%}

                          <ul class="mob_submenu">
                            <li>
                              <a href="{{ lm_2.url }}">{{ lm_2.title }}
                              </a>
                            </li>
                          </ul>

                        {% endfor %}

                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              {%- else -%}
                <a href="{{ link.url }}" class="{% if link.active %} active{% endif %}">
                  {{ link.title | escape }}
                </a>
              {%- endif -%}
            </li>
          {%- endfor -%}
          <li>
            {%- if shop.customer_accounts_enabled -%}
              <div class="account-menu-wrapper-mob">
                <a href="{{ routes.account_url }}" title="account link" class="header__icon block text-center">
                  {% render 'icon-account', class: 'w-10 mx-auto' %}
                  <span>
                    My Account
                  </span>
                </a>
              </div>
            {%- endif -%}
          </li>
        </ul>
      </div>
    </div>
    <div class="close_win_btn close_target" data-target="#mobile_nav">
      <i class="fal fa-times"></i>
    </div>
  </div>
  <div class="back_cover close_target" data-target="#mobile_nav"></div>
</div>
<!--END Mobile Menu-->

{%- if section.blocks.size > 0 -%}
  <div class="announcement-bar" style="background-color:{{ section.settings.bg_announcementbr }};">
    <div class="announcement-bar-slider  swiper">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- if block.settings.announcementbar != blank -%}
            <div class="item swiper-slide h5 m0 caps">
              <div class="item_block">{{ block.settings.announcementbar }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}


<header class="header">
  <div class="container">

    <div class="headcustom-grid">

      <button class="hidden mobilebtn" type="button" data-target="#mobile_nav">
        <div class="burger-lines">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </div>
      </button>



      <div class="head-cal headnav">

        <nav>
          <ul class="menu-list">

            {% for link in section.settings.menu.links %}
              <li class="menu-list__item" data-url="{{ link.url | escape }}" data-name="{{ link.title | escape }}">

                {%- if link.links != blank -%}

                  <a href="{{ link.url | escape }}" class="menu-list__link h5 m0 caps {% if link.active %} active{% endif %}">{{ link.title | escape }}
                    <i class="fa fa-chevron-down"></i>
                  </a>
                  <!--Drop down wrapper-->
                  <div class="dropdown-wrapper">

                    <ul class="submenu">
                      {%- for childlink in link.links -%}
                        <li>
                          {%- if childlink.links == blank -%}
                            <a href="{{ childlink.url }}" class="menu-list__link h5 m0 caps {% if childlink.active %} active{% endif %}">
                              {{ childlink.title | escape }}
                            </a>
                          {%- else -%}
                            <a href="{{ childlink.url }}" class="menu-list__link h5 m0 caps {% if childlink.active %} active{% endif %}">
                              {{ childlink.title | escape }}
                            </a>
                            {%- for l2 in childlink.links -%}
                              <!--Drop down wrapper-->
                              <div class="dropdown-wrapper submenu-l2">
                                <ul class="submenu">
                                  <li>
                                    <a href="{{ l2.url }}" class="h5 m0 caps">{{ l2.title }}
                                    </a>
                                  </li>
                                </ul>
                              </div>
                            {% endfor %}
                          {% endif %}

                        </li>
                      {%- endfor -%}
                    </ul>

                  </div>
                  <!--END Drop down wrapper-->

                {%- else -%}

                  <a href="{{ link.url }}" class="menu-list__link h5 m0 caps {% if link.active %} active{% endif %}">{{ link.title }}
                  </a>

                {%- endif -%}

              </li>
            {%- endfor -%}

          </ul>
        </nav>

      </div>
      <div class="head-cal head-logo">

        <div class="header__logo">

          {% if template.name != "index" %}
            <a href="/">
            {% endif %}
            {% if section.settings.logo != blank %}
              <span class="desctop">
                {{ section.settings.logo }}
              </span>
            {% endif %}
            {% if section.settings.logo_mobile != blank %}
              <span class="mobile">
                {{ section.settings.logo_mobile }}
              </span>
            {% endif %}
            {% if template.name != "index" %}
            </a>
          {% endif %}
        </div>

      </div>
      <div class="head-cal head-usernav">
        <!--Search toogle buttons-->
        <div class="head-search-btns">
          {% render 'icon-search' class:'search-modal__toggle-open'%}

        </div>
        <!--END Search toggle buttons-->

        {%- if shop.customer_accounts_enabled -%}
          <div class="account-menu-wrapper">
            <a href="{{ routes.account_url }}" title="account link" class="header__icon block text-center">
              {% render 'icon-account', class: 'w-10 mx-auto' %}
              <span class="sr-only">
                {%- liquid
                              if customer
                                echo 'customer.account_fallback' | t
                              else
                                echo 'customer.account_fallback' | t
                              endif
                            -%}
              </span>
            </a>
          </div>
        {%- endif -%}


        <div class="cartwrapper">
          {% if request.page_type != 'cart' and settings.show_cart_drawer == true %}
            <span class="head-cart-wrp head-cart-drawer">
              <span class="cart-counter cart-itemcost {% if cart.item_count == 0 %}hidden{% endif %}">{{- cart.item_count -}}
              </span>
              <svg width="19" viewBox="0 0 13 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.3555 3.57104C10.3555 1.65698 8.76953 0.0710449 6.85547 0.0710449C4.91406 0.0710449 3.35547 1.65698 3.35547 3.57104H0.730469V11.8835C0.730469 13.114 1.6875 14.071 2.91797 14.071H10.793C11.9961 14.071 12.9805 13.114 12.9805 11.8835V3.57104H10.3555ZM6.85547 0.946045C8.27734 0.946045 9.48047 2.14917 9.48047 3.57104H4.23047C4.23047 2.14917 5.40625 0.946045 6.85547 0.946045ZM12.1055 11.8835C12.1055 12.6218 11.5039 13.196 10.793 13.196H2.91797C2.17969 13.196 1.60547 12.6218 1.60547 11.8835V4.44604H3.35547V5.75854C3.35547 6.00464 3.54688 6.19604 3.79297 6.19604C4.01172 6.19604 4.23047 6.00464 4.23047 5.75854V4.44604H9.48047V5.75854C9.48047 6.00464 9.67188 6.19604 9.91797 6.19604C10.1367 6.19604 10.3555 6.00464 10.3555 5.75854V4.44604H12.1055V11.8835Z" fill="#001529"/>
              </svg>
            </span>
          {% else %}
            <a href="/cart" class="head-cart-wrp">
              <span class="cart-counter cart-itemcost {% if cart.item_count == 0 %}hidden{% endif %}">{{- cart.item_count -}}
              </span>
              <svg width="19" viewBox="0 0 13 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.3555 3.57104C10.3555 1.65698 8.76953 0.0710449 6.85547 0.0710449C4.91406 0.0710449 3.35547 1.65698 3.35547 3.57104H0.730469V11.8835C0.730469 13.114 1.6875 14.071 2.91797 14.071H10.793C11.9961 14.071 12.9805 13.114 12.9805 11.8835V3.57104H10.3555ZM6.85547 0.946045C8.27734 0.946045 9.48047 2.14917 9.48047 3.57104H4.23047C4.23047 2.14917 5.40625 0.946045 6.85547 0.946045ZM12.1055 11.8835C12.1055 12.6218 11.5039 13.196 10.793 13.196H2.91797C2.17969 13.196 1.60547 12.6218 1.60547 11.8835V4.44604H3.35547V5.75854C3.35547 6.00464 3.54688 6.19604 3.79297 6.19604C4.01172 6.19604 4.23047 6.00464 4.23047 5.75854V4.44604H9.48047V5.75854C9.48047 6.00464 9.67188 6.19604 9.91797 6.19604C10.1367 6.19604 10.3555 6.00464 10.3555 5.75854V4.44604H12.1055V11.8835Z" fill="#001529"/>
              </svg>
            </a>
          {% endif %}

        </div>

      </div>

    </div>



  </div>
  <!--End container-->

  <!--Search--->
  <div class="search-modal" aria-modal="true" aria-label="Search">
    <div class="modal-overlay"></div>
    <div class="search-modal__content" tabindex="-1">

      <predictive-search class="search-modal__form" data-loading-text="Loading...">
        <form action="/search" method="get" role="search" class="search search-modal__form">

          <input class="search__input field__input" id="Search-In-Modal" type="search" name="q" value="" placeholder="Search" role="combobox" aria-expanded="false" aria-owns="predictive-search-results-list" aria-controls="predictive-search-results-list" aria-haspopup="listbox" aria-autocomplete="list" autocorrect="off" autocomplete="off" autocapitalize="off" spellcheck="false" aria-activedescendant="" placeholder="Search">
          <label class="field__label" for="Search-In-Modal">Search</label>
          <input type="hidden" name="options[prefix]" value="last">

          <button class="search__button field__button" aria-label="Search">
            {% render 'icon-search' %}
          </button>


          {%- if settings.predictive_search_enabled -%}
            <div class="predictive-search predictive-search--header" tabindex="-1" data-predictive-search>
              <div class="predictive-search__loading-state">
                <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                  <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                </svg>
              </div>
            </div>

            <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
          {%- endif -%}

        </form>
      </predictive-search>

      <button type="button" class="search-modal__close-button" aria-label="Close">
        {% render 'icon-close' %}
      </button>

    </div>
  </div>
  <!---END--->

</header>



{% schema %}
  {
    "name": "t:sections.header.name",
    "class": "section-header",
    "settings": [
      {
        "type": "html",
        "id": "logo",
        "label": "t:sections.header.settings.logo.label"
      }, {
        "type": "html",
        "id": "logo_mobile",
        "label": "Logo mobile"
      }, {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "t:sections.header.settings.menu.label"
      },
      {
        "type": "color",
        "id": "bg_announcementbr",
        "label": "Background color for announcementbar"
      }
    ],

    "blocks": [
      {
        "type": "bar",
        "name": "Announcement bar",
        "settings": [
          {
            "type": "html",
            "id": "announcementbar",
            "label": "Announcement bar"
          }
        ]
      }
    ]
  }
{% endschema %}
