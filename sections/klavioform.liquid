
{% stylesheet %}
  #shopify-section-newsletter,#shopify-section-footer{
    display:none;
  }
  .full-page-form{
/*      position: fixed;
    left: 0;
    top: 0;  */
    width: 100%;
    height: 100%; 
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
  }
  .full-page-form .code-page{
   width: 100%;
/*     max-width: 1200px; */
    background-color: #fff;
    padding: 15px;
    text-align: center;
    border-radius: 10px;
    margin: 15px;
  }
   .full-page-form .code-page a{
     color: #a4915c;
  }
  .full-page-form .code-page:hover a{
     text-decoration: underline;
  }
  @media (max-width: 576px) {
    .h2.code-page {
      font-size: 24px;
    }
  }
  .full-page-form .code-page {
    max-width: none;
  }
{% endstylesheet %}

<div class="full-page-form" style="background-image:url({{ section.settings.image | img_url: 'master' }});">
  {% if section.settings.formcode != blank %}
<div class="h2 code-page">{{ section.settings.formcode }}</div>
  {% endif %}
</div>




