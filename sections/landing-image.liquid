{%- for block in section.blocks -%} 
  {% if block.settings.image != blank %}
    <div class="landing-image">
      <img src="{{ block.settings.image | img_url: "master" }}">
    </div>  
  {% endif %} 
{%- endfor -%}


<style>
  .landing-image {
    line-height: 0;
  }
  .landing-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 48px 0px;
  }
</style>

{% schema %}
  {
    "name": "Landing image",
    "settings": [
    ],
    "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
    "presets": [
    {
      "name": "Landing image"
    }
  ]
  }
{% endschema %}

