{{ 'main-cart-items.css' | asset_url | stylesheet_tag }}
{% if section.settings.padding_top != 0 or section.settings.padding_bottom != 0 or section.settings.bg_color != 'rgba(0,0,0,0)' %}
  {%- style -%} 
      .section-{{ section.id }} {
        {% if section.settings.bg_color != 'rgba(0,0,0,0)' %}
          background-color:{{section.settings.bg_color}};
        {% endif %}
        {% if section.settings.padding_top != 0 %}
          padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        {% endif %}
        {% if section.settings.padding_bottom != 0 %}
          padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
        {% endif %}
      }
      @media screen and (min-width: 750px) {
        .section-{{ section.id }} {
          {% if section.settings.padding_top != 0 %}
            padding-top: {{ section.settings.padding_top }}px;
          {% endif %}
          {% if section.settings.padding_bottom != 0 %}
            padding-bottom: {{ section.settings.padding_bottom }}px;
          {% endif %}
        }
      }
  {%- endstyle -%}
{% endif %}
<div class="p42 section-{{ section.id }} {{section.settings.sect_class}}">
  <div class="container">
      <div class="mb68">
        <h1 class="h1 cart-items-title center">{{ 'sections.cart.title' | t }}</h1>
        {% if cart.item_count > 0 %}
        <div class="mt26 center"><a href="{{ routes.all_products_collection_url }}" class="btn_link">{{ 'general.continue_shopping' | t }}</a></div>
        {% endif %}
      </div>
      <div class="cart_content">
        {% render 'cart-page-form' %} 
      </div>
  </div>
</div>

<script src="{{ 'cart.js' | asset_url }}" ></script>

{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_cart_note",
      "default": false,
      "label": "t:sections.main-cart-footer.settings.show_cart_note.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.section_head"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:sections.all.bg_color"
    },
    {
      "type": "text",
      "id": "sect_class",
      "label": "t:sections.all.sect_class"
    }
  ],
  "blocks": [
    {
      "type": "subtotal",
      "name": "t:sections.main-cart-footer.blocks.subtotal.name",
      "limit": 1
    },
    {
      "type": "buttons",
      "name": "t:sections.main-cart-footer.blocks.buttons.name",
      "limit": 1
    },
    {
      "type": "@app"
    }
  ]

}
{% endschema %}
