<div class="container pt68">
  {% if section.settings.heading != blank %}
    <div class="h1 page_bg_block-title">{{ section.settings.heading }}</div>
  {% endif %}
</div>  
{% if section.settings.image1 != blank or section.settings.text1 != blank %}
  <div class="page_bg_block p68">
    <div class="container p16">
      <div class="row align-items-center">
        <div class="col-lg-7 col-md-6 page_bg_block-image">
          {% if section.settings.image1 != blank %}
            <img src="{{ section.settings.image1 | img_url: "master" }}">
          {% endif %}
        </div>
        <div class="col-lg-5 col-md-6 order-md-first ">
          <div class="page_bg_block_text p42">
            {{ section.settings.text1 }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% if section.settings.image2 != blank or section.settings.text2 != blank %}
  <div class="page_white_block p68">
    <div class="container p16">
      <div class="row align-items-center">
        <div class="col-lg-7 col-md-6">
          {% if section.settings.image2 != blank %}
            <img src="{{ section.settings.image2 | img_url: "master" }}">
          {% endif %}
        </div>
        <div class="col-lg-5 col-md-6 ">
          <div class="page_bg_block_text p42">
            {{ section.settings.text2 }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}


{% if section.settings.text3 != blank or section.settings.button_link3 != blank %}
  <div class="page_about_block_texts p110">
    <div class="container p26">
      <div class="page_about_block_texts_wrapper center">
        {{ section.settings.text3 }}
        {% if section.settings.button_link3 != blank %}
          <div class="pt26">
            <a href="{{ section.settings.button_link3 }}" class="button_arrow_border">{% include "button_arrow", title: section.settings.button_label3 %}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}


{% if section.settings.image4 != blank or section.settings.text4 != blank  or section.settings.button_link4 != blank %}
  <div class="page_about_block_image {% if section.settings.parallax == true %} parallax-container parallax-container-desctop {% endif %}" {% if section.settings.parallax == true %} data-parallax="scroll"data-position="top"data-bleed="0"data-image-src="https:{{ section.settings.image4 | img_url: "master" }}"
    {% endif %}>
    <div class="container height_100">
      <div class="row height_100 align-items-center">
        <div class="col-12 center">
          {% if section.settings.text4 != blank %}
            <div class="h1">{{ section.settings.text4 }}
            </div>
          {% endif %}
          {% if section.settings.button_link4 != blank %}
            <div class="pt26">
              <a href="{{ section.settings.button_link4 }}" class="button_arrow_border button_arrow_border_white">{% include "button_arrow", title: section.settings.button_label4 %}
              </a>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
    <img src="{{ section.settings.image4 | img_url: "master" }}">
  </div>

{% endif %}
{% schema %}
  {
    "name": "Page",
    "tag": "section",
    "class": "section",
    "settings": [
       {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "header",
        "content": "Block 1"
      },
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Image"
      },
      {
        "type": "html",
        "id": "text1",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Block 2"
      }, {
        "type": "image_picker",
        "id": "image2",
        "label": "Image"
      }, {
        "type": "html",
        "id": "text2",
        "label": "Text"
      }, {
        "type": "header",
        "content": "Block 3"
      }, {
        "type": "html",
        "id": "text3",
        "label": "Text"
      }, {
        "type": "text",
        "id": "button_label3",
        "label": "t:sections.rich-text.blocks.button.settings.button_label.label"
      }, {
        "type": "url",
        "id": "button_link3",
        "label": "t:sections.rich-text.blocks.button.settings.button_link.label"
      }, {
        "type": "header",
        "content": "Block 4"
      }, {
        "type": "image_picker",
        "id": "image4",
        "label": "Image"
      }, {
        "type": "checkbox",
        "id": "parallax",
        "default": false,
        "label": "Parallax"
      }, {
        "type": "text",
        "id": "text4",
        "label": "Title"
      }, {
        "type": "text",
        "id": "button_label4",
        "label": "t:sections.rich-text.blocks.button.settings.button_label.label"
      }, {
        "type": "url",
        "id": "button_link4",
        "label": "t:sections.rich-text.blocks.button.settings.button_link.label"
      }
    ]
  }
{% endschema %}
