{{ 'reviews.css' | asset_url | stylesheet_tag }}
<div class="reviews p68">
  <div class="container p16">
    <div class="reviews-slider swiper">
      <div class="swiper-wrapper"> 
    {% for block in section.blocks %}
        <div class="item swiper-slide">
          <div class="item_wrapper">
            <ul class="star">
            {% assign range = (1..block.settings.star) %}
            {% for i in range %}
            <li><i class="fas fa-star"></i></li>
            {% endfor %}
            {% assign num = 5 | minus: block.settings.star %}
            {% assign range = (1..num) %}
            {% for i in range %}
            <li><i class="fas fa-star-o"></i></li>
            {% endfor %} 
            </ul>
            {% if block.settings.title != blank %}
            <div class="h2">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.text != blank %}
            <div class="h3">{{ block.settings.text }}</div>
            {% endif %}
            {% if block.settings.name != blank %}
            <div class="h6">â€” {{ block.settings.name }}</div>
            {% endif %}
          </div>
        </div>
    {% endfor %}
    </div>
      <div class="swiper-slider-button swiper-slider-button-prev swiper-button-prev-reviews"><svg width="19" height="48" viewBox="0 0 19 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18 47L1 24L18 1" stroke="#A4915C"/></svg></div>
      <div class="swiper-slider-button swiper-slider-button-next swiper-button-next-reviews"><svg width="19" height="48" viewBox="0 0 19 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 0.999999L18 24L1 47" stroke="#A4915C"/></svg></div>
      <div class="swiper-slider-pagination swiper-pagination swiper-pagination-reviews"></div>
  </div>
  </div>
</div>

{% schema %}
{
  "name": "Reviews",
  "tag": "section",
  "class": "section",
  "settings": [  
  ],
  "blocks": [

    {
      "type": "item",
      "name": "Item", 
      "settings": [
      {
        "type": "select",
        "id": "star",
        "label": "Star",
        "options": [
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "0",
            "label": "0"
          }
        ],
        "default": "5"
      },
      {
        "type": "text",
        "id": "title", 
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "text", 
        "label": "Text"
      },
      {
        "type": "text",
        "id": "name", 
        "label": "Name"
      }
      ]
    } 
  ],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}